{
  "compilerOptions": {
    "module": "commonjs",

    "allowJs": true,
    "sourceMap": true,

    "noEmit": true,
    "strict": true,
    "isolatedModules": true,

    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "baseUrl": "./",

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
}
