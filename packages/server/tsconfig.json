{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "rootDir": "./src",

    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "exclude": ["./__tests__/**/*", "./*.js", "./dist"]
}
